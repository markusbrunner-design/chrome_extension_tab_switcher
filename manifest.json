{
    "short_name": "mb_tab_switcher",
    "name": "Chrome Extension Tab Switcher",
    "version": "1.2",
    "description": "Easy to use Tab Cycle Extension using Options-Page and just click on icon for activation/deactivation.",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "options_page": "options.html",
    "browser_action": {
        "default_title": "Tab Switcher",
        "default_icon": {
            "16": "images/img16.png",
            "48": "images/img48.png",
            "128": "images/img128.png"
        }
    },
    "icons": {
        "16": "images/img16.png",
        "48": "images/img48.png",
        "128": "images/img128.png"
    },
    "permissions": [
        "tabs",
        "storage"
    ]
}